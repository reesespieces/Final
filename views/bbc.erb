        <div class="topstory">
          <a href="<%=x[:link] %>"><%=x[:title]%></a>
          </br>
          <%= x[:pubDate] %>
          </br>
          <%= x[:description] %>
        </div>
        </br>
    <%end%>

  </div>

</div>
