          <a href="<%=x[:link] %>"><%=x[:title]%></a>
          </br>
          <%= x[:pubDate] %>
          </br>
          <!-- < %= x[:description] %> -->
        </div>
        </br>
    <%end %>
  </div>

  <div id="foxpopular">
    <% r = SimpleRSS.parse(open('http://feeds.foxnews.com/foxnews/most-popular')) %>

    </br>
    </br>

    <h4>Most Popular</h4>

    <% @popularstories = [r.entries[0], r.entries[1], r.entries[2], r.entries[3], r.entries[4]] %>
